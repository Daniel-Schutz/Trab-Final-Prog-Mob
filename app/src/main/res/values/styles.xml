<resources>
    <!-- Base application theme. -->
    <style name="Theme.FriendKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_logo</item>
        <item name="colorPrimaryVariant">@color/dark_cyan_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_cyan_green</item>
        <item name="colorSecondaryVariant">@color/dark_cyan_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/background</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnBackground">@color/text_color_primary</item>
        <item name="colorOnSurface">@color/text_color_primary</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Desativa a ActionBar fornecida pelo tema. -->
    <style name="Theme.FriendKeeper.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/color_logo</item>
        <item name="colorPrimaryDark">@color/color_logo</item>
        <item name="colorAccent">@color/color_logo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
